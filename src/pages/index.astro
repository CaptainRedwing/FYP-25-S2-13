    const price = document.getElementById('price') as HTMLElement | null;
    const note = document.getElementById('note') as HTMLElement | null;
    const subscribeBtn = document.getElementById('subscribeBtn') as HTMLButtonElement | null;

    const stripeLinks: Record<string, string> = {
      "1": "https://buy.stripe.com/test_cNi4gB3OLbBFdqc5Xrbsc00",
      "2": "https://buy.stripe.com/test_7sY7sN3OLbBFeug1Hbbsc01",
