---
import BaseLayout from "@layouts/BaseLayout.astro";
import FeatureCard from "@components/FeatureCard.astro";
import Review from "@components/Review.astro";
import Donation from "@components/Donation.astro";
---

<BaseLayout>
  <section class="hero content-box">
    <h1>Client-side Security, Simplified.</h1>
    <p>Real-time in-browser vulnerability scanning with zero data leakage.</p>
    <a href="https://github.com/ilovecoding77/FYP-25-S2-13" class="btn btn-primary">Download Extension</a>
  </section>

  <section id="features" class="features content-box">
    <h2>Key Features</h2>
    <FeatureCard 
      icon="fa-shield-halved" 
      title="Smart Threat Detection" 
      description="Detects common threats like XSS, CSRF, and misconfigured security headers instantly." />

    <FeatureCard 
      icon="fa-brain" 
      title="AI-Powered Site Alerts" 
      description="Uses machine learning to flag suspicious or malicious sites in real time." />

    <FeatureCard 
      icon="fa-lock" 
      title="Privacy-First Design" 
      description="100% client-side scanning. Nothing is tracked or sent." />

    <FeatureCard 
      icon="fa-code" 
      title="Deep Vulnerability Analysis" 
      description="Performs in-depth scans for CSP issues, missing CSRF tokens, tracker detection, and risky JavaScript files." /> 
  </section>

  <section class="mission content-box">
    <h2>Our Mission</h2>
    <blockquote class="mission-quote">
      <i>"Security should be a right, not a luxury."</i>
    </blockquote>
    <p>VulnEye is built to make the web safer, one browser at a time &mdash; open-source, privacy-respecting and accessible to all.</p>
    <p>We empower developers and everyday users to identify threats before they become vulnerabilities.</p>
  </section>

  <Donation />

  <section class="reviews content-box">
  <h2>What Our Users Say</h2>
  <div class="review-carousel-wrapper">
    <button class="scroll-btn left" id="scrollLeft"><i class="fas fa-chevron-left"></i></button>

    <div class="review-carousel" id="reviewCarousel">
      <Review quote="VulnEye caught vulnerabilities I didn't know existed!" name="A. T., Web Developer" />
      <Review quote="Super clean interface and privacy-first love it." name="P. D., Security Analyst" />
      <Review quote="My go-to tool for frontend vulnerability checks!" name="M. W., Frontend Engineer" />
      <Review quote="A must-have for frontend devs!" name="S. R., DevOps" />
      <Review quote="A reliable tool to demonstrate real-world web security flaws." name="Professor L., Lecturer" />
      <Review quote="Fast, efficient, and doesn't leak any data." name="J. Y., Ethical Hacker" />
    </div>

    <button class="scroll-btn right" id="scrollRight"><i class="fas fa-chevron-right"></i></button>
    </div>
  </section>
</BaseLayout>
