      "20": "https://buy.stripe.com/test_eVq9AVad98ptdqcadHbsc0j"
    };

    function updatePricing(value: number) {
      if (!userCount || !price || !note || !subscribeBtn) return;

      if (value === 21) {
        userCount.textContent = "21+ users";
        price.textContent = "";
        note.style.display = "block";
        subscribeBtn.style.display = "none";
      } else {
        note.style.display = "none";
        userCount.textContent = `${value} user${value > 1 ? 's' : ''}`;

        let perUserPrice = 0;
        if (value <= 5) perUserPrice = 7.99;
        else if (value <= 10) perUserPrice = 6.99;
        else perUserPrice = 5.99;

        const total = (value * perUserPrice).toFixed(2);
        price.textContent = `$${total}/month`;

        subscribeBtn.style.display = "inline-block";
      }
    }

    if (slider && subscribeBtn) {
      slider.addEventListener('input', (e: Event) => {
        const target = e.target as HTMLInputElement;
        const value = Number(target.value);
        updatePricing(value);
      });

      subscribeBtn.addEventListener('click', () => {
        const value = slider ? slider.value : "1";
        const url = stripeLinks[value];
        if (url) window.location.href = url;
      });

      updatePricing(Number(slider.value));
    }
  });
</script>
